<h1>Edit info page</h1>

<form action="/notes/{{id}}?_method=put" method="POST">
  <p>
    <label for="author">Author:</label>
    <input type="text" value="{{this.author}}" name="author">
  </p>
  <p>
    <label for="title">Title:</label>
    <input type="text" value="{{this.title}}" name="title">
  </p>
  <p>
    <label for="body">Body: </label>
    <input type="text" value="{{this.body}}" name="body">
  </p>

  <input type="submit" value="Update">
</form>
