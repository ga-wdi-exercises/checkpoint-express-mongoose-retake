{{#if notes}}
<ul class="notes">
  {{#each notes}}
  <div class="card">
    <div class="card-content">
      <a class="card-title" href="/note/{{id}}"> {{ body }} </a>
    </div>
    <div class="card-action">
      <a href="/user/{{ author.id }}" class="">{{ author.local.email }}</a>
      <span class="note_title">{{ title }}</span>
    </div>
  </div>
  {{/each}}
</ul>
{{/if}}